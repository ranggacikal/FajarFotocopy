<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_edt_white">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_warning"
            android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:text="Jumlah data Anda tidak singkron!\nSilahkan melakukan perubahan data."
                android:fontFamily="@font/sairabold"/>



        <TextView
            android:id="@+id/text_dialog_cancel_tambah_barang_keto"
            android:text="Tutup"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_outer_gold"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>
    </LinearLayout>


