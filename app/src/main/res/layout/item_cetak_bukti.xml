<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear_riwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_item_id_penjualan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:text="Id Penjualan"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_item_qty"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:text="Qty"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_item_nama_barang"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:text="Nama barang"
            android:textColor="@color/black"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/text_item_total"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="11sp" />

    </LinearLayout>


</RelativeLayout>
