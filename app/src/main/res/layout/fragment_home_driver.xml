<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".driver.fragmentdriver.HomeDriverFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_home_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="33dp">

                <ImageView
                    android:id="@+id/imgprofile"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_operator" />

                <ImageView
                    android:id="@+id/img_notif"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_notif" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgprofile"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selamatdatang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/sairabold"
                            android:text="Hi"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_nama_home_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toRightOf="@+id/selamatdatang"
                            android:fontFamily="@font/sairabold"
                            android:text="Nama User"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_tanggal_home_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selamatdatang"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imgprofile"
                        android:fontFamily="@font/sairabold"
                        android:text="Hari dan tanggal"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_keluar_driver"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/btn_black"
                    android:fontFamily="@font/sairabold"
                    android:padding="5dp"
                    android:text="Keluar"
                    android:textColor="@color/white" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_driver1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/btn_keluar_gudang"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="22dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_pengiriman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sairabold"
                            android:text="Pengiriman"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_dari_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_pengiriman"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sairamedium"
                            android:text="Dari:"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_pengiriman"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/txt_dari_driver"
                            android:fontFamily="@font/sairamedium"
                            android:text="Gudang"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_kepada_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_dari_driver"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sairamedium"
                            android:text="Kepada:"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_dari_driver"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/txt_kepada_driver"
                            android:fontFamily="@font/sairamedium"
                            android:text="Toko"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:fontFamily="@font/sairabold"
                            android:text="Tanggal"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_driver2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/btn_keluar_gudang"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="22dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_rubah_status_pengiriman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sairabold"
                            android:text="Rubah Status Pengiriman"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/txt_rubah_status_pengiriman"
                            android:layout_marginHorizontal="40dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_black"
                            android:fontFamily="@font/sairamedium"
                            android:text="Submit"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/il_driver"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>