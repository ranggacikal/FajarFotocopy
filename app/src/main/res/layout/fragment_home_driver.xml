<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".driver.fragmentdriver.HomeDriverFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_home_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="33dp">

                <ImageView
                    android:id="@+id/imgprofile"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_operator" />

                <ImageView
                    android:id="@+id/img_notif"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_notif" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgprofile"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selamatdatang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/sairabold"
                            android:text="Hi"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_nama_home_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toRightOf="@+id/selamatdatang"
                            android:fontFamily="@font/sairabold"
                            android:text="Nama User"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_tanggal_home_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selamatdatang"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imgprofile"
                        android:fontFamily="@font/sairabold"
                        android:text="Hari dan tanggal"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_keluar_driver"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/btn_black"
                    android:fontFamily="@font/sairabold"
                    android:padding="5dp"
                    android:text="Keluar"
                    android:textColor="@color/white" />

            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerinformasi"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_home"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pengiriman_toko_keto_driver"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_store_baru"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginStart="28dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengirim Ke Toko"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sairabold"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pengiriman_supplier_driver"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cashier"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginStart="28dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengiriman Supplier"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sairabold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




        </LinearLayout>




    </ScrollView>


</LinearLayout>