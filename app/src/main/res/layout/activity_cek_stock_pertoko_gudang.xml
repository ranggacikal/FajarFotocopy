<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gudang.CekStockPertokoGudangActivity">


    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/background_header_green"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_back_cek_stock_pertoko_gudang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:orientation="horizontal"
                android:layout_marginTop="38dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_atas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sairamedium"
                    android:text="Cek Stock"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_cek_stock_pertoko_gudang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sairamedium"
                    android:layout_marginStart="10dp"
                    android:text="Nama Toko"
                    android:textColor="@color/white"
                    android:textSize="24sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchview_cekstockpertokogudang"
                android:layout_width="333dp"
                android:layout_height="54dp"
                android:background="@drawable/bg_rectangle"
                android:padding="15dp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnfilter"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/linear_header"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/button_filter"
        android:fontFamily="@font/sairabold"
        android:padding="5dp"
        android:src="@drawable/ic_filter"
        android:text="Filter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnfilter"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_toko_gudang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnfilter"
            android:layout_marginStart="39dp"
            android:fontFamily="@font/sairabold"
            android:text="Toko Kosambi"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_daftar_produk_gudang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnfilter"
            android:layout_marginStart="39dp"
            android:fontFamily="@font/sairabold"
            android:text="Daftar Produk"
            android:layout_marginTop="13dp"
            android:textColor="#8A8A8A"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>