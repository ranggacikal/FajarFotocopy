<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kasir.transaksikasir.TransaksiBerhasilActivity">

<ImageView
    android:id="@+id/img_transaksi"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/ic_berhasiltransaksi"/>

    <TextView
        android:id="@+id/txt_cetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/sairabold"
        android:text="Yeay!\nTransaksi Berhasil!"
        android:layout_below="@+id/img_transaksi"/>



        <RelativeLayout
            android:layout_below="@+id/txt_cetak"
            android:layout_width="match_parent"
            android:background="@drawable/btn_gold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/txt_cetak2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sairabold"
                android:layout_marginTop="70dp"
                android:text="Silahkan\nCetak Bukti Pembayaran"/>

            <Button
                android:id="@+id/btn_transaksi_berhasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:fontFamily="@font/sairabold"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_black"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="50dp"/>

        </RelativeLayout>






</RelativeLayout>