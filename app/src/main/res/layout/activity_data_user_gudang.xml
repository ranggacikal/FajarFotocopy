<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gudang.usergudang.DataUserGudangActivity">

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/background_header_green">

            <LinearLayout
                android:id="@+id/linear_back_data_user_gudang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_atas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sairamedium"
                    android:text="Data User"
                    android:textColor="@color/white"
                    android:textSize="24sp" />


            </LinearLayout>


        </LinearLayout>


        <SearchView
            android:id="@+id/searchview_datausergudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium"
            android:padding="7dp" />

        <Spinner
            android:id="@+id/spinner_data_user_pilih_toko_gudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_rectangle"
            android:visibility="gone"
            android:fontFamily="@font/sairamedium"/>

        <Spinner
            android:id="@+id/spinner_data_user_pilih_level_gudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_data_user_gudang"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/text_kosong_data_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak Ada Data Untuk Hasil Pencarian Ini"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@+id/searchview_datausergudang"
            android:fontFamily="@font/sairabold"/>


    </LinearLayout>

</RelativeLayout>