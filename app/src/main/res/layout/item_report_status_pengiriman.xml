<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/text_tanggal_pengiriman_item_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sairabold"
                android:text="Tanggal Pengiriman"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_status_pengiriman_item_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gold"
                android:fontFamily="@font/sairabold"
                android:padding="3dp"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textColor="@color/black"

                android:text="Status pengiriman" />

        </RelativeLayout>


        <TextView
            android:id="@+id/text_id_status_pengiriman_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sairamedium"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="id" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rectangle" />


        <TextView
            android:id="@+id/text_nama_outlet_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairabold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:text="Nama Outlet" />


        <TextView
            android:id="@+id/text_id_outlet_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairamedium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:text="Id Outlet" />

        <TextView
            android:id="@+id/text_nama_driver_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sairabold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Nama Driver" />

        <TextView
            android:id="@+id/text_id_driver_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sairamedium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Id Driver" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_lihat_invoice_item_report"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_black"
            android:text="Lihat Invoice"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white" />

        </RelativeLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>