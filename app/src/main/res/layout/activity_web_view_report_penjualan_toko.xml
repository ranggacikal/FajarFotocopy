<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gudang.tokogudang.WebViewReportPenjualanTokoActivity">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webViewLaporanPenjualanToko"
        android:layout_above="@+id/savePdfBtnLaporanPenjualanToko"
        android:layout_marginBottom="10dp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressInvoiceLaporanPenjualanToko"
        />

    <Button
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:background="@drawable/btn_gold"
        android:text="Cetak PDF"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/savePdfBtnLaporanPenjualanToko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>