<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSebagaiActivity">

    <RelativeLayout
        android:id="@+id/relativelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logofotocopy"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Fotocopy"
            android:layout_toRightOf="@+id/imglogo"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sairabold"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_green"
        android:orientation="vertical"
        android:layout_below="@id/relativelogo"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Sebagai"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:layout_marginTop="29dp"/>
        
        <Button
            android:id="@+id/btn_loginsebagai_gudang"
            android:layout_width="313dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Gudang"
            android:textSize="24dp"
            android:fontFamily="@font/sairabold"
            android:textColor="#FF0000"
            android:background="@drawable/bg_edt_white"
            />

        <Button
            android:id="@+id/btn_loginsebagai_keto"
            android:layout_width="313dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Kepala Toko"
            android:textSize="24dp"
            android:fontFamily="@font/sairabold"
            android:textColor="#000000"
            android:background="@drawable/bg_edt_white"
            />

        <Button
            android:id="@+id/btn_loginsebagai_kasir"
            android:layout_width="313dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Kasir"
            android:textSize="24dp"
            android:fontFamily="@font/sairabold"
            android:textColor="#3051FF"
            android:background="@drawable/bg_edt_white"
            />


    </LinearLayout>

</RelativeLayout>