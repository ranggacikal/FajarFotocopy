<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gold">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Masukan jumlah Pack"
                android:textColor="@color/white"
                android:fontFamily="@font/sairabold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_cart_code"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <com.mcdev.quantitizerlibrary.HorizontalQuantitizer
                android:id="@+id/number_picker_dialog_qty_penjualan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/edt_pcs_dialog_qty_penjualan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:hint="Jumlah PCS"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/sairabold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/text_tambah_barang_dialog_penjualan_qty"
            android:text="Tambah Barang"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:background="@drawable/btn_black"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_cancel_dialog_penjualan_qty"
            android:text="Cancel"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btn_merah"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>