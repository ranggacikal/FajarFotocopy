<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kepalatoko.pengeluaranketo.PengeluaranKetoActivity">

    <LinearLayout
        android:id="@+id/header_pengeluaran_keto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/background_header_green">

        <LinearLayout
            android:id="@+id/linear_back_pengeluaran_keto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="38dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_atas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sairamedium"
                android:text="Pengeluaran Toko"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_pengeluaran_keto"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Jumlah Pengeluaran" />

        <EditText
            android:id="@+id/edt_tambah_pengeluaran_keto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium"
            android:inputType="number"
            android:padding="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Keterangan" />

        <EditText
            android:id="@+id/edt_keterangan_keto"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="12"
            android:maxLines="11"
            android:minLines="4"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <Button
            android:id="@+id/btn_submit_pengeluaran_keto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_black"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:fontFamily="@font/sairamedium"
            />

    </LinearLayout>


</RelativeLayout>