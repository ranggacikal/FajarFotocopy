<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kasir.fragmentkasir.RiwayatTransaksiKasirFragment">

    <RelativeLayout
        android:id="@+id/headerkeranjang"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/background_header_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginStart="75dp"
            android:text="Riwayat Transaksi"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sairamedium"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_tanggal_riwayat_kasir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/headerkeranjang"
        android:fontFamily="@font/sairabold"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_riwayat_kasir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tanggal_riwayat_kasir">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>