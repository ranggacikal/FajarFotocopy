<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kasir.fragmentkasir.RiwayatTransaksiKasirFragment">

    <RelativeLayout
        android:id="@+id/headerkeranjang"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/background_header_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginStart="75dp"
            android:text="Riwayat Transaksi"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sairamedium"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_tanggal_riwayat_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Riwayat"
        android:layout_below="@id/headerkeranjang"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sairabold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linear_abu"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_below="@+id/txt_tanggal_riwayat_transaksi"
        android:layout_marginTop="15dp"
        android:background="#C4C4C4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sairamedium"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="ID Penjualan"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sairamedium"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="QTY"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sairamedium"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Barang"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sairamedium"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Discount"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sairamedium"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_riwayat_kasir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_abu">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>