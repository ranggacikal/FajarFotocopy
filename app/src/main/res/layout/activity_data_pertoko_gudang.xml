<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:fillViewport="true"
    tools:context=".gudang.tokogudang.DataPertokoGudangActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/background_header_green">

            <LinearLayout
                android:id="@+id/linear_back_tambah_toko_gudang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:orientation="horizontal"
                android:layout_marginTop="38dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_atas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sairamedium"
                    android:text="Data Toko"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sairamedium"
                    android:text="Nama Toko"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="24sp" />


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Nama Toko" />

        <EditText
            android:id="@+id/edt_nama_toko_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Kota" />

        <EditText
            android:id="@+id/edt_kota_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Persentase" />

        <EditText
            android:id="@+id/edt_persentase_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Jumlah Anggota" />

        <EditText
            android:id="@+id/edt_jumlah_anggota_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sairamedium"
            android:text="Alamat" />

        <EditText
            android:id="@+id/edt_alamat_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="12"
            android:maxLines="11"
            android:minLines="4"
            android:background="@drawable/bg_rectangle"
            android:fontFamily="@font/sairamedium" />

        <Button
            android:id="@+id/btn_edit_data_toko_gudang"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_black"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Edit"
            android:textSize="20sp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sairamedium"/>

        <Button
            android:id="@+id/btn_hapus_data_toko_gudang"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_merah"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Hapus"
            android:paddingHorizontal="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sairamedium"/>



    </LinearLayout>

</ScrollView>