<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kepalatoko.mintabarangketo.TambahBarangKetoActivity">

    <LinearLayout
        android:id="@+id/linear_header_minta_barang"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/background_header_green">

        <LinearLayout
            android:id="@+id/linear_back_cari_minta_barang_keto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="38dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_atas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sairamedium"
                android:text="Cari Barang"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_tambah_barang_keto"
        android:layout_below="@+id/linear_header_minta_barang"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchview_minta_barang_keto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_rectangle"
            android:hint="Cari Barang"
            android:padding="7dp" />

        <Button
            android:id="@+id/btn_barcode_minta_barang_keto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="39dp"
            android:background="@drawable/btn_gold"
            android:fontFamily="@font/sairabold"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            android:src="@drawable/ic_filter"
            android:text="Scan Barcode"
            android:textColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_minta_barang_keto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_tambah_barang_keto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/btn_black"
        android:fontFamily="@font/sairamedium"
        android:text="Buat Pengiriman"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>