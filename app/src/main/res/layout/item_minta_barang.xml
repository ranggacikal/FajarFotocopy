<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_minta_barang"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_item_nama_minta_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/sairabold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock PCS : "
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/sairareguler"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/text_item_stock_pcs_minta_barang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/sairabold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Pack : "
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/sairareguler"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/text_item_stock_pack_minta_barang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/sairabold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_tambah_minta_barang_keto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_black"
                android:fontFamily="@font/sairabold"
                android:paddingHorizontal="5dp"
                android:text="Tambah"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

