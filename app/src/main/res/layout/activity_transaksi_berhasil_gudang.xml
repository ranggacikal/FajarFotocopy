<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gudang.suppliergudang.TransaksiBerhasilGudangActivity">


    <ImageView
        android:id="@+id/img_transaksi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_berhasiltransaksi" />

    <TextView
        android:id="@+id/txt_cetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_transaksi"
        android:fontFamily="@font/sairabold"
        android:gravity="center"
        android:text="Yeay!\nTransaksi Berhasil!"
        android:textSize="30sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_cetak"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_gold">

        <TextView
            android:id="@+id/txt_cetak2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/sairabold"
            android:gravity="center"
            android:text="Silahkan\nCetak Bukti Pembayaran"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_transaksi_berhasil_gudang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_black"
            android:fontFamily="@font/sairabold"
            android:text="Lihat Detail"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>