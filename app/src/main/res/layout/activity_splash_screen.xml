<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreenActivity">

    <RelativeLayout
        android:id="@+id/relativelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logofotocopy"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Fotocopy"
            android:layout_toRightOf="@+id/imglogo"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sairabold"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_green"
        android:orientation="vertical"
        android:layout_below="@id/relativelogo"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELAMAT DATANG"
            android:fontFamily="@font/sairabold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="56dp"
            android:layout_marginStart="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utamakan Kejujuran Dalam\nSetiap Transaksi"
            android:fontFamily="@font/sairamedium"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginStart="36dp"/>

    </LinearLayout>

</RelativeLayout>