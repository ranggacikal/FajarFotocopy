<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gudang.fragmentgudang.InformasiGudangFragment">

    <RelativeLayout
        android:id="@+id/headerinformasi"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/background_header_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginStart="75dp"
            android:text="Informasi"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sairamedium"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerinformasi"
        android:layout_marginTop="51dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_tambah_informasi"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#D4B44E"
            android:layout_marginHorizontal="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus_baru"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginStart="28dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Informasi"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="22sp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_data_informasi"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            app:cardBackgroundColor="#D4B44E"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history_baru"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginStart="28dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Informasi"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>