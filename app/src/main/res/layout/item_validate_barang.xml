<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_validate_barang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_validate_barang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/logobaru"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_nama_barang_item_validate_barang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/iv_item_validate_barang"
                app:layout_constraintTop_toTopOf="@+id/iv_item_validate_barang"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_title_stock_item_validate_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Stock Saat ini : "
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_barang_item_validate_barang"
                app:layout_constraintStart_toEndOf="@+id/iv_item_validate_barang"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_value_stock_item_validate_barang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00 pcs"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_barang_item_validate_barang"
                app:layout_constraintStart_toEndOf="@+id/tv_title_stock_item_validate_barang"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_title_pack_item_validate_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah PACK Saat ini : "
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_stock_item_validate_barang"
                app:layout_constraintStart_toEndOf="@+id/iv_item_validate_barang"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_value_pack_item_validate_barang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00 Pack"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_value_stock_item_validate_barang"
                app:layout_constraintStart_toEndOf="@+id/tv_title_pack_item_validate_barang"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>