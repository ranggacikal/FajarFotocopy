<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#D4B44E"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_barang_gudang"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_gift"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id Transaksi : "
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_item_id_penjualan_riwayat_kasir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id Transaksi"
                    android:maxWidth="230dp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal : "
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_item_tanggal_riwayat_kasir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tanggal"
                    android:maxWidth="230dp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Outlet : "
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_item_nama_outlet_riwayat_kasir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Outlet"
                    android:maxWidth="230dp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_item_status_riwayat_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:maxWidth="230dp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sairabold"
                    android:textSize="11sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>